<?xml version="1.0" ?>
<config>
	<fvm>
		<name>test</name>
		<platform>cpu</platform>
		<grid>
			<lowerCorner>0.0 0.0 0.0</lowerCorner>
			<upperCorner>1.0 0.0 0.0</upperCorner>
			<dimension>128 1 1</dimension>
		</grid>
		<boundary>neumann</boundary>
		<flux>godunov</flux>
		<endTime>0.2</endTime>
		<equation>burgers</equation>
		<reconstruction>none</reconstruction>
		<cfl>auto</cfl>
		<integrator>auto</integrator>
		<initialData>
			<python>test.py</python>
			<parameters>
				<parameter>
					<name>X</name>
					<length>1024</length>
					<values>
						<value>0</value>
					</values>
				</parameter>
			</parameters>
		</initialData>
		<writer>
			<type>netcdf</type>
			<basename>brownian_halton</basename>
			<numberOfSaves>1</numberOfSaves>
		</writer>
	</fvm>
	<uq>
		<samples>4096</samples>
		<generator>auto</generator>
		<parameters>
			<parameter>
				<name>X</name>
				<length>1024</length>
				<type>dll</type>
				<library>libhalton.so</library>
				<create_function>halton_create</create_function>
				<delete_function>halton_delete</delete_function>
				<generator_function>halton_generate</generator_function>
			</parameter>
		</parameters>
		<stats>
			<stat>
				<name>meanvar</name>
				<numberOfSaves>1</numberOfSaves>
				<writer>
					<type>netcdf</type>
					<basename>brownian_halton</basename>
				</writer>
			</stat>
		</stats>
	</uq>
</config>
