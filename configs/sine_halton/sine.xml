<config>
<fvm>
  <name>
    sine_halton
  </name>
  <platform>cpu</platform>
  <grid>
    <lowerCorner>-1 0 0</lowerCorner>
    <upperCorner>1 0 0</upperCorner>
    <dimension>512 1 1</dimension>
  </grid>
  <boundary>periodic</boundary>
  <flux>godunov</flux>
  <endTime>2</endTime>
  <equation>burgers</equation>
  <reconstruction>weno2</reconstruction>
  <cfl>auto</cfl>
  <integrator>auto</integrator>
  <initialData>
    <python>sine.py</python>
    <parameters>
      <parameter>
        <name>X</name>
        <length>10</length>
        <values><value>0</value></values>
      </parameter>
    </parameters>
  </initialData>
  <writer>
    <type>netcdf</type>
    <basename>halton_sine</basename>
    <numberOfSaves>1</numberOfSaves>
  </writer>
</fvm>
<uq>
  <samples>4</samples>
  <generator>auto</generator>
  <parameters>
    <parameter>
      <name>X</name>
      <length>10</length>
      <type>dll</type>
      <library>libhalton.so</library>
      <create_function>halton_create</create_function>
      <delete_function>halton_delete</delete_function>
      <generator_function>halton_generate</generator_function>
    </parameter>
  </parameters>
  <stats>
  <stat>
    <name>
      meanvar
    </name>
    <numberOfSaves>1</numberOfSaves>
    <writer>
      <type>netcdf</type>
      <basename>halton_sine</basename>
    </writer>
  </stat>
  </stats>
  </uq>
</config>
